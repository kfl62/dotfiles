#sshfs
alias m-router='sshfs root@kfl62-router.lan:/ /mnt/kfl62-router -p 22'
alias m-trst='sshfs kfl62@trst.ro:/ /mnt/kfl62-trst -p 22'
alias m-vba='sshfs kfl62@kfl62-vba.lan:/ /mnt/kfl62-vba -p 22'
alias u-all='fusermount -uq /mnt/kfl62-router; fusermount -uq /mnt/kfl62-trst;\
             fusermount -uq /mnt/kfl62-vba'
